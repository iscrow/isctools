#!/usr/bin/env bash

NAME="$*"
SCRIPT="$(basename "$0")"

function help() {
	echo "$SCRIPT creates a new starter bash script"
	echo "Usage:"
	echo "  $SCRIPT script_name"
	echo
	exit 1
}


[ -z "$NAME" ] && help
[ -e "$NAME" ] && echo "$NAME already exists. Exiting." && exit 1

cat << 'EOTEMPLATE' > "$NAME"
#!/usr/bin/env bash

SCRIPT="$(basename "$0")"

function help() {
	cat <<-EOF

		$SCRIPT $_description_of_functionality_
	
		Usage example:
		  $SCRIPT $_example_usage_

	EOF
	exit 1
}

[ -z "$*" ] && help

EOTEMPLATE

chmod +x "$NAME"
$EDITOR "$NAME"
